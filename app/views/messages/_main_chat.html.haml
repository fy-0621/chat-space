.chat-main

  .group-info
    .group-info__title
      = @group.name
      .member
        Member:
        - @group.users.each do |user|
          = user.name
    .group-info__edit
      = link_to edit_group_path(@group), class: "contents__btn contents__btn--edit-group" do
        Edit


  .messages
    = render @messages
    


  .footer
    .input-box
      .input-box__message
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          .input-box__image
            = f.label :image, class: 'input-box-image' do
              = icon('fas', 'image')
            = f.file_field :image, class: 'input-box__image__file'
          = f.submit 'Send', class: 'send-btn'

.chat-side

  .side-header
    .side-header__box
      .side-header__box__user
        = current_user.name
      .side-header__box__icon
        = link_to new_group_path do
          = icon('far fa-edit', 'fa-edit', class: "contents__btn--new-group")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "contents__btn--edit-user")


  .group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: "group-link" do 
        .group-list__name
          = group.name
          .group-list__message
            = group.show_last_message
